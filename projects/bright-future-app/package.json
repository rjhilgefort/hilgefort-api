{
  "name": "bright-future-app",
  "version": "0.1.0",
  "description": "Bright Future App",
  "author": "@rjhilgefort",
  "license": "MIT",
  "scripts": {
    "prettier": "../../node_modules/.bin/prettier",
    "run-s": "../../node_modules/.bin/run-s",
    "start": "yarn run-s -- re:build gatsby:develop",
    "gatsby:develop": "gatsby develop",
    "gatsby:serve": "gatsby serve",
    "gatsby:build": "gatsby build",
    "re:lint:fix": "find ./scripts -type f -name '*.re' | xargs ./node_modules/.bin/refmt --in-place",
    "re:build": "bsb -make-world",
    "re:build:watch": "bsb -make-world -w",
    "re:clean": "bsb -clean-world",
    "re:rebuild": "run-s re:clean re:build",
    "lint:fix": "yarn prettier -- --write 'src/**/*.js'"
  },
  "dependencies": {
    "bs-css": "^8.0.1",
    "bs-platform": "^4.0.2",
    "gatsby": "^1.9.277",
    "gatsby-link": "^1.6.44",
    "gatsby-link-reason": "^1.1.0",
    "gatsby-plugin-react-helmet": "^2.0.10",
    "gatsby-plugin-reason": "^1.3.0",
    "react-helmet": "^5.2.0",
    "reason-react": "^0.5.3"
  }
}
